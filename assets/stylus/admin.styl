@import 'nib'

body
	background-color:#eee

.is-logged-in
	.hidden-logged-in
		display:none!important

.is-logged-out
	.hidden-logged-out
		display:none!important

#ajax-status
	position:fixed
	right:0px
	bottom:0px

.admin-scope
	#admin-content
		margin-top:70px
		margin-bottom:100px

	i
		margin-right:15px
		vertical-align: middle

	.pull-right i
		margin-right:0px
		margin-left:15px

	.table-hover
		tr
			cursor:pointer

	.input-margins
		padding:7px

	.upload-viewport
		position:relative
		height:300px
		img
			transition: all 0.5s ease;
		.dropzone
			position:absolute
			top:0px!important
			width:100%
			height:300px
			opacity: 0
			transition: all 0.5s ease;
			paddding-top:40%
		.dropzone:hover
			opacity: 0.8
		.loading
			opacity: 1
